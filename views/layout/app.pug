doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Nolatech Test | #{title}
        link(rel="stylesheet", href="/css/app.css")
    body
        div(class="min-h-full")
            nav(class="bg-white border-b border-gray-200")
                div(class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8")
                    div(class="flex justify-between h-16")
                        div(class="flex")
                            div(class="flex items-center flex-shrink-0")
                                img(class="block w-auto h-8 lg:hidden" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company")
                                img(class="hidden w-auto h-8 lg:block" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company")
                            div(class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8")
                                // Current: "border-indigo-500 text-gray-900", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700"
                                a(href="#" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 border-indigo-500" aria-current="page") Dashboard
                        div(class="hidden sm:ml-6 sm:flex sm:items-center")
                            // Profile dropdown
                            div(class="relative ml-3 flex items-center")
                                a(href="/edit-user" class="block px-4 py-2 text-sm text-gray-700" aria-current="page") Mi perfil
                                form(action="/auth/logout" method="POST")
                                    input(type="hidden" name="_csrf" value=csrf)
                                    input#user-menu-item-2(type="submit" value="Cerrar sesi√≥n" class="block px-4 py-2 text-sm text-gray-700 cursor-pointer" role="menuitem" tabindex="-1")

            div(class="py-10")
                header
                    div(class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8")
                        h1(class="text-3xl font-bold leading-tight tracking-tight text-gray-900")= title
                main
                    div(class="mx-auto max-w-7xl sm:px-6 lg:px-8")

                        if message.success
                            div(class="rounded-md bg-green-50 p-4 mt-4")
                                div(class="flex")
                                    div(class="flex-shrink-0")
                                        svg(class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true")
                                            path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd")
                                    div(class="ml-3")
                                        p(class="text-sm font-medium text-green-800")= message.success

                        //- Your content
                        block content