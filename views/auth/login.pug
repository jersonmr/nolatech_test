extends ../layout/index

block content

    .flex.min-h-full.flex-col.justify-center.px-6.py-12(class='lg:px-8')
        div(class='sm:mx-auto sm:w-full sm:max-w-sm')
            img.mx-auto.h-10.w-auto(src='https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600' alt='Nolatech')
            h2.mt-10.text-center.text-2xl.font-bold.leading-9.tracking-tight.text-gray-900= title

            if errors
                .rounded-md.bg-red-50.p-4.mt-4
                    .flex
                        .flex-shrink-0
                            svg.h-5.w-5.text-red-400(viewBox="0 0 20 20", fill="currentColor", aria-hidden="true")
                                path(fill-rule="evenodd", d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z", clip-rule="evenodd")
                        .ml-3
                            h3.text-sm.font-medium.text-red-800 Hay #{errors.length} errores en tu petición
                            .mt-2.text-sm.text-red-700
                                ul.list-disc.space-y-1.pl-5(role="list")
                                    each error in errors
                                        li= error.msg

        .mt-10(class='sm:mx-auto sm:w-full sm:max-w-sm')
            form.space-y-6(action='/auth/login' method='POST' novalidate)
                input(type="hidden", name="_csrf", value=csrf)
                div
                    label.block.text-sm.font-medium.leading-6.text-gray-900(for='email') Correo electrónico
                    .mt-2
                        input#email.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='email' type='email' autocomplete='email' required='' class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
                div
                    .flex.items-center.justify-between
                        label.block.text-sm.font-medium.leading-6.text-gray-900(for='password') Contraseña
                        .text-sm
                            a.font-semibold.text-indigo-600(href='/auth/forgot-password' class='hover:text-indigo-500') ¿Olvidaste tu contraseña?
                    .mt-2
                        input#password.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='password' type='password' autocomplete='current-password' required='' class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
                div
                    input.flex.w-full.justify-center.rounded-md.bg-indigo-600.px-3.text-sm.font-semibold.leading-6.text-white.shadow-sm(type='submit' value="Inicia sesión" class='py-1.5 hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600')

            p.mt-10.text-center.text-sm.text-gray-500
                | ¿Eres nuevo usuario?
                a.font-semibold.leading-6.text-indigo-600.ml-2(href='/auth/register' class='hover:text-indigo-500') Regístrate
