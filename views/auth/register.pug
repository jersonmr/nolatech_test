extends ../layout/index

block content

    .flex.min-h-full.flex-col.justify-center.px-6.py-12(class='lg:px-8')
        div(class='sm:mx-auto sm:w-full sm:max-w-sm')
            img.mx-auto.h-10.w-auto(src='https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600' alt='Your Company')
            h2.mt-10.text-center.text-2xl.font-bold.leading-9.tracking-tight.text-gray-900= title
        .mt-10(class='sm:mx-auto sm:w-full sm:max-w-sm')
            form.space-y-6(action='#' method='POST')
                div
                    label.block.text-sm.font-medium.leading-6.text-gray-900(for='name') Tu nombre
                    .mt-2
                        input#name.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='name' type='text' autocomplete='name' required='' class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
                div
                    label.block.text-sm.font-medium.leading-6.text-gray-900(for='email') Correo electrónico
                    .mt-2
                        input#email.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='email' type='email' autocomplete='email' required='' class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
                div
                    //- .flex.items-center.justify-between
                    //-     label.block.text-sm.font-medium.leading-6.text-gray-900(for='password') Contraseña
                    //-     .text-sm
                    //-         a.font-semibold.text-indigo-600(href='#' class='hover:text-indigo-500') ¿Olvidaste tu contraseña?
                    label.block.text-sm.font-medium.leading-6.text-gray-900(for='password') Contraseña
                    .mt-2
                        input#password.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='password' type='password' autocomplete='current-password' required='' class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
                div
                    label.block.text-sm.font-medium.leading-6.text-gray-900(for='password_confirmation') Repetir contraseña
                    .mt-2
                        input#password_confirmation.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='password_confirmation' type='password'  required='' class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
                div
                    input.flex.w-full.justify-center.rounded-md.bg-indigo-600.px-3.text-sm.font-semibold.leading-6.text-white.shadow-sm(type='submit' value="Regístrate" class='py-1.5 hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600')
